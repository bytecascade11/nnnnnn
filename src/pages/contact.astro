---
import BaseLayout from "../layouts/Base.astro";

const meta = {
  title: "Contact – ReviByte Technology Opinion",
  description: "Get in touch with Oke iSamuel – questions, tips, long-term reports, or just say hi."
};
---

<BaseLayout meta={meta}>
  <article class="prose prose-lg mx-auto max-w-4xl px-6 py-16 dark:prose-invert">
    <h1>Contact Oke “iSamuel”</h1>
    <p class="lead text-xl text-gray-600 dark:text-gray-300">
      Have a question, device report, or just want to say hi?<br>
      I read and reply to every single message personally.
    </p>

    <div class="my-12 overflow-hidden rounded-lg border border-gray-200 bg-gray-50 dark:border-gray-800 dark:bg-gray-900">
      <iframe 
        src="https://docs.google.com/forms/d/e/1FAIpQLSfXBwHw109s1Q5JDzt4JzL0TjcQhvfFLB9liSAqG7SBhmMVxg/viewform?embedded=true" 
        width="640" 
        height="504" 
        frameborder="0" 
        marginheight="0" 
        marginwidth="0"
        class="w-full max-w-full"
        style="height: 1400px;"
        title="Contact form"
      >
        Loading…
      </iframe>
    </div>

    <p class="text-center text-sm text-gray-600 dark:text-gray-400">
      Prefer direct email? Reach me anytime.
    </p>
  </article>
</BaseLayout>
